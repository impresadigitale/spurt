<script>
var options = {
    "key": "<%= key %>", // Enter the Key ID generated from the Dashboard
    "amount": "<%= amount %>", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise or INR 500.
    "currency": "INR",
    "name": "<%= orderId %>",
    "description": "<%= description %>",

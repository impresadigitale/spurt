    "handler": function (response){
        // alert(JSON.stringify(response));
        var queryParams = '?' + 
        Object.keys(response).map(function(key) {
            return encodeURIComponent(key) + '=' +
                encodeURIComponent(response[key]);
        }).join('&');
        window.location = '/razorpay-payment/success' + queryParams;
    },
    "prefill": {
        "name": "<%= username %>",
        "email": "<%= email %>",
        "contact": "<%= contact %>"
    },
    "modal": {
        "ondismiss": function(){
            window.location = '/razorpay-payment/cancel/<%= orderIncrementId %>';
        }
    }
};
var rzp1 = new Razorpay(options);
